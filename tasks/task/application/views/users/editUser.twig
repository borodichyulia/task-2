{% extends 'layouts/default.twig' %} {% block body %}

<section class="container d-sm-flex flex-sm-column align-items-sm-center align-items-md-start" id="form">
    <div class="mb-3 col-sm-11 col-lg-4">
        <label for="email" class="form-label">Email address</label>
        <input type="email" class="form-control" id="email" value={{user['email']}} data-required="true" data-max-length="20" name="email">
    </div>
    <div class="mb-3 col-sm-11 col-lg-4   ">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" value="{{user['name']}}" data-required="true" data-max-length="20" name="name">
    </div>
    <div class="mb-3 col-sm-11 col-lg-4">
        <label for="gender" class="form-label">Gender</label>
        <select class="form-select" name="gender" id="gender">
        {% if user['gender']=='male' %}
            <option value="male" selected="selected">Male</option>
            <option value="female">Female</option>
        {% else %}
            <option value="male">Male</option>
            <option value="female" selected="selected">Female</option>
        {% endif %}    
        </select> 
    </div>
    <div class="mb-4 col-sm-11 col-lg-4">
        <label for="status" class="form-label">Status</label>
        <select class="form-select" id="status" name="status">
        {% if user['status']=='active' %}
            <option value="active" selected="selected">Active user</option>
            <option value="inactive">Inactive user</option>
        {% else %}
            <option value="active">Active user</option>
            <option value="inactive" selected="selected">Inactive user</option>
        {% endif %} 
        </select>
    </div>
    <button type="submit" class="btn btn-primary col-lg-1 col-5" onClick=editUser({{ user['id'] }})>Edit</button>
</section>
{% endblock %}